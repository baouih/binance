modules = ["java", "java-17", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Spring-PY00168 && ./mvnw clean install -DskipTests && ./mvnw spring-boot:run -Dserver.port=5000"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Minimal Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Trading Bot Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Trading Bot"

[[workflows.workflow]]
name = "Spring Boot App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

